{
    "name": "ramp-controller",
    "version": "1.0.0",
    "description": "RAMP GUI Controller - Cross-platform desktop application for managing agents",
    "main": "main.js",
    "scripts": {
        "start": "electron .",
        "build": "electron-builder",
        "build:win": "electron-builder --win",
        "build:mac": "electron-builder --mac",
        "build:linux": "electron-builder --linux"
    },
    "keywords": [
        "ramp",
        "c2",
        "controller"
    ],
    "author": "RAMP Project",
    "license": "MIT",
    "devDependencies": {
        "electron": "^28.0.0",
        "electron-builder": "^24.9.1"
    },
    "dependencies": {
        "axios": "^1.6.2",
        "xterm": "^5.3.0",
        "xterm-addon-fit": "^0.8.0",
        "xterm-addon-web-links": "^0.9.0",
        "socket.io-client": "^4.5.4"
    },
    "build": {
        "appId": "com.ramp.controller",
        "productName": "RAMP Controller",
        "directories": {
            "output": "dist"
        },
        "files": [
            "main.js",
            "src/**/*",
            "node_modules/**/*"
        ],
        "win": {
            "target": [
                "nsis"
            ],
            "icon": "assets/icon.ico"
        },
        "mac": {
            "target": [
                "dmg"
            ],
            "icon": "assets/icon.icns"
        },
        "linux": {
            "target": [
                "AppImage"
            ],
            "icon": "assets/icon.png"
        }
    }
}